<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:elevation="2dp"
        android:paddingTop="8dp">


    <ImageView
        android:id="@+id/inquiryImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/inquiryText"
            android:text="hello, hello!"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/inquiryImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/inquiryTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/inquirySender"
        android:layout_below="@id/inquiryImage"
         android:text="11:40"
        android:textColor="@color/grey"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/inquirySender"
        android:text="Ashri"
        android:layout_below="@+id/inquiryImage"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/inquiryText"
        app:layout_constraintRight_toLeftOf="@+id/inquiryText" />
</RelativeLayout>
