<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:contentDescription="banner"
        android:background="@drawable/daaa"
        />

<RelativeLayout
    android:layout_width="350dp"
    android:id="@+id/searchBarLayout"
    android:layout_height="50dp"
    android:focusableInTouchMode="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="450dp"
    android:background="@drawable/custom_border_curved"
  >
<EditText
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:hint="Search"
    android:textColorHint="@color/white"
    android:id="@+id/mainSearch"
    android:layout_marginLeft="3dp"
   />

    <Button
        android:layout_width="50dp"
        android:id="@+id/mainSearchButton"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/mainSearch"
        android:background="@drawable/searcg1"

/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/searchBarLayout"
        android:layout_marginTop="30dp">


            <Button
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:id="@+id/mensClothing"
                android:background="@drawable/mensicons">
            </Button>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text=" Men"
            android:id="@+id/menText"
            android:textColor="@color/grey"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_below="@id/mensClothing"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:id="@+id/womensClothing"
            android:background="@drawable/gal"
            android:layout_toRightOf="@id/mensClothing"
            android:layout_marginLeft="50dp"
            >
        </Button>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" Women"
            android:layout_toRightOf="@id/mensClothing"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:id="@+id/womenText"
            android:textColor="@color/grey"

            android:layout_below="@id/mensClothing"/>


        <Button
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:id="@+id/kidsClothing"
            android:background="@drawable/kidz"
            android:layout_below="@id/mensClothing"
            android:layout_marginTop="50dp"
            >
        </Button>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" Kids"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:id="@+id/kidText"
            android:textColor="@color/grey"

            android:layout_below="@id/kidsClothing"/>


        <Button
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:id="@+id/accesories"
            android:background="@drawable/tie"
            android:layout_below="@id/womensClothing"
            android:layout_toRightOf="@id/kidsClothing"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp">
        </Button>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Items"
            android:layout_marginTop="5dp"
            android:id="@+id/itemText"
            android:textAlignment="center"
            android:textColor="@color/grey"

            android:layout_below="@id/accesories"
            android:layout_toRightOf="@id/kidsClothing"
            android:layout_marginLeft="50dp"/>





    </RelativeLayout>
</RelativeLayout>
</ScrollView>