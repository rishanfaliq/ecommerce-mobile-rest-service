<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:id="@+id/receiptImage"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/receiptName"
        android:layout_toRightOf="@id/receiptImage"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:id="@+id/purchaseRemove"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"
        android:text="x"
        android:textSize="40dp" />
<TextView
    android:layout_width="200dp"
    android:layout_height="30dp"
    android:id="@+id/receiptQuantity"
    android:layout_below="@id/receiptName"
    android:layout_toRightOf="@id/receiptImage"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/reciptTotal"
        android:layout_below="@id/receiptQuantity"
        android:layout_toRightOf="@id/receiptImage"/>

    <TextView
        android:id="@+id/receiptDate"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reciptTotal"
        android:layout_toEndOf="@+id/receiptImage"
        android:layout_toRightOf="@+id/receiptImage" />
</RelativeLayout>

