<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_border"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cartImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="80dp" />

    <ProgressBar
        android:id="@+id/pBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="150dp">

    </ProgressBar>

    <TextView
        android:id="@+id/cartText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cartImage"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@id/cartText"
        android:id="@+id/cartQuantity"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@id/cartImage"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"

        android:id="@+id/quantityText"
        android:layout_toRightOf="@id/cartQuantity"
        android:layout_below="@id/cartText"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@id/cartQuantity"
        android:id="@+id/cartItemPrice"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@id/cartImage"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/cartPriceText"
        android:layout_toRightOf="@id/cartQuantity"
        android:layout_below="@id/quantityText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/cartText"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:text="Remove"
        android:layout_marginTop="20dp"
        android:layout_below="@id/cartPriceText"
        android:id="@+id/removeButton"
        android:textColor="@color/white" />


</RelativeLayout>