<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_border_curved"
    android:layout_margin="3dp"
    android:elevation="10dp"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/pBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_height="200dp">
    </ProgressBar>


    <ImageView
        android:id="@+id/productIcon"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"  />

    <TextView
        android:id="@+id/productText"
        android:layout_width="300dp"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="15dp"
        android:layout_below="@+id/productIcon"
        android:layout_marginTop="10dp"
        android:text="TextView"

        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_below="@+id/productText"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/priceText"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="10dp"

        android:textAppearance="@style/TextAppearance.AppCompat"

        />
    <ImageView
        android:id="@+id/gridFav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_marginLeft="110dp"
        android:background="@drawable/favouritesinactive"
        android:text="" />



</RelativeLayout>